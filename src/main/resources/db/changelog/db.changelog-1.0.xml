            <column name="price" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="curr" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="brand_id, product_id, price_list" tableName="prices" constraintName="pk_prices"/>
    </changeSet>

